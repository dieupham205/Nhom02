@{
    ViewData["Title"] = "Thông tin khách hàng - VivaVivu";
    Layout = "_Layout";
}

<!-- Tailwind + Font (tạm để trong View, có thể dời lên Layout sau) -->
<script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">

<script>
    tailwind.config = {
        darkMode: "class",
        theme: {
            extend: {
                colors: {
                    primary: "#27377D",
                    secondary: "#F7A531",
                    "background-beige": "#F7F1E6",
                },
                fontFamily: {
                    sans: ["Inter", "sans-serif"],
                },
                boxShadow: {
                    soft: "0 4px 20px -2px rgba(39, 55, 125, 0.08)",
                }
            },
        },
    }
</script>

<style>
    body {
        font-family: 'Inter', sans-serif;
    }
</style>

<main class="flex-grow w-full max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col lg:flex-row gap-8">

        <!-- SIDEBAR -->
        <aside class="w-full lg:w-1/4">
            <div class="bg-white rounded-2xl shadow-soft p-6 sticky top-24">
                <div class="flex flex-col items-center text-center pb-6 border-b">
                    <div class="rounded-full size-24 mb-4 bg-cover bg-center"
                         style="background-image:url('https://lh3.googleusercontent.com/aida-public/AB6AXuD9h-S8ae1m0mfUE-cXAjgfwVUSIIRQK5JRDcYUmoiClwS6vE-9mapkE6gFXcI_hPRzcsSWZGyaltBGXKgw4d5RXswUjYft7zM5jjGpV66f_esioL1yi4i7Nb_opjpjBYg41uyRNBCeHiZT1GKx6Q2H6nqD1_irbgYINccvM6b253ENOBll0RtzJ50IHmm8giOo1V20txvm7f5u_CWx8WhVNJem641M4GJk1k_zvjQ90nndC_AP-upHJfZWZu6nwir-7_j5nbaj0kM');">
                    </div>
                    <h2 class="text-xl font-bold">Nguyễn Văn A</h2>
                    <p class="text-secondary text-sm">Thành viên Bạc</p>
                </div>

                <nav class="flex flex-col gap-2 mt-6">
                    <a class="px-4 py-3 rounded-xl bg-primary text-white font-medium">Thông tin tài khoản</a>
                    <a class="px-4 py-3 rounded-xl text-gray-500 hover:bg-gray-100">Lịch sử đặt tour</a>
                    <a class="px-4 py-3 rounded-xl text-gray-500 hover:bg-gray-100">Tour yêu thích</a>
                    <a class="px-4 py-3 rounded-xl text-gray-500 hover:bg-gray-100">Đổi mật khẩu</a>
                    <a class="px-4 py-3 rounded-xl text-red-500 hover:bg-red-50">Đăng xuất</a>
                </nav>
            </div>
        </aside>

        <!-- CONTENT -->
        <section class="flex-1 bg-white rounded-2xl shadow-soft p-8">
            <h2 class="text-2xl font-bold text-primary mb-2">Thông tin cá nhân</h2>
            <p class="text-sm text-gray-500 mb-6">Quản lý thông tin hồ sơ của bạn</p>

            <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <input class="border rounded-xl p-3" placeholder="Họ và tên" value="Nguyễn Văn A" />
                <input class="border rounded-xl p-3" placeholder="Email" value="nguyenvan.a@example.com" />
                <input class="border rounded-xl p-3" placeholder="Số điện thoại" value="0912 345 678" />
                <input class="border rounded-xl p-3" type="date" value="1995-10-12" />
                <input class="border rounded-xl p-3 md:col-span-2" placeholder="Địa chỉ" value="123 Nguyễn Huệ, Q1" />

                <div class="md:col-span-2 flex justify-end">
                    <button type="button"
                            class="bg-secondary text-white px-8 py-3 rounded-xl font-bold">
                        Cập nhật thông tin
                    </button>
                </div>
            </form>
        </section>

    </div>
</main>
